<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <header>
        <%- include('./partials/header') %>
    </header>


    <main>

        <!-- contenedor principal -->
        <section class="main-container">

            <section class="Items">

                <!-- Contenedor info superior y botones -->
                <section class="title-container">


                    <!-- Texto titulo de carrito -->
                    <article class="title-container__text">
                        <h2>Mi Carrito</h2>
                    </article>


                    <!-- Boton Vaciar carrito -->
                    <arrticle class="title-container__emty-cart">
                        <button>Vaciar Carrito</i></button>
                    </arrticle>


                    <!-- link para volver al home -->
                    <arrticle class="title-container__back-button">
                        <a href="/">
                            <p><i class="fa-solid fa-chevron-left"></i> Volver al Catalogo</p>
                        </a>
                    </arrticle>


                </section>

                <!-- Vista dinamica -->
                <% products.forEach(products=> { %>


                    <!--CONTENEDOR PRICIPAL MOSTRAR CARRITO-->
                    <section class="cart-show">


                        <!--Imagen producto-->
                        <article class="cart-show__img">
                            <img src="<%= products.img %>" alt="<%= products.name %>">
                        </article>



                        <!--Detalles del producto-->
                        <section class="cart-show__detail">

                            <!-- Nombre del producto -->
                            <article class="description-product">
                                <h3>
                                    <%= products.name %>
                                </h3>
                            </article>


                            <!-- informacion de envio -->
                            <article class="shipping-text">
                                <h4>
                                    Informacion envio
                                </h4>
                            </article>


                            <!-- boton de cantidad -->
                            <article class="qty-button">
                                <button class="decrement"> - </button>
                                <input type="number" min="0" max="100" step="5" value="1" id="my-input" readonly>
                                <button class="increment"> + </button>
                            </article>


                            <!-- Link para editar -->
                            <article class="edit-details">
                                <a href="#">Editar</a>
                            </article>

                        </section>


                        <!--Contenedor boton de borrar y precio-->
                        <section class="cart-show__eraseAndPrice">

                            <!-- boton borrar producto -->
                            <article class="erase-button">
                                <button><i class="fa-solid fa-trash-can"></i></button>
                            </article>


                            <!-- precio del producto -->
                            <article class="price-product">
                                <p>$<%= products.price %>
                                </p>
                            </article>

                        </section>


                    </section>



            </section>



            <% }); %>

                <section class="payment-container">
                    <!--Contenedor detalle total de compra-->
                    <section class="payment-show">


                        <!--SUBTOTAL-->
                        <section class="payment-details">
                            <article class="payment-details__text">Subtotal</article>
                            <article class="payment-details__amount">$6000</article>
                        </section>


                        <!--Costo de envio-->
                        <section class="Shipping-details">
                            <article class="Shipping-details__text">Envio</article>
                            <article class="Shipping-details__amount">GRATIS</article>
                        </section>


                        <!--TOTAL A PAGAR-->
                        <section class="payment-total">
                            <article class="payment-total__text">TOTAL</article>
                            <article class="payment-total__amount">$6000</article>
                        </section>


                        <!--boton finalizar compra-->
                        <section class="checkout">
                            <article class="checkout__text">
                                <h3>FINALIZAR COMPRA</h3>
                            </article>
                        </section>

                    </section>

                </section>




        </section>



    </main>







    <footer>

        <%- include('./partials/footer') %>



    </footer>

</body>

</html>