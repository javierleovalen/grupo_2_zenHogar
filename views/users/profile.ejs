<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', {title:'Perfil', styles:['normalize','styles','partials/footer','partials/header_test']}) %>
</head>

<body>
    <%- include('../partials/header_test') %>
    <main>
      <section class="section__container profile__container">
        <article class="article__container profile__windows">
          <form action="/users/profile/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="avatar__container">
            <img src="/img/uploads/users/avatars/<%= user.avatar %>" alt="profile_picture">
            </div>
            <input type="file" name="avatar" class="custom-file-upload" style="color:transparent">
            <div class="form__container">
              <label for="firstName" class="form__label">Nombre: </label><br>
            <input type="text" name="firstName" placeholder="Ingrese su nombre" class ="form__input" value="<%= user.firstName %>"><br>
            <label for="lastName" class="form__label">Apellido: </label><br>
            <input type="text" name="lastName" placeholder="Ingrese su apellido" class ="form__input" value="<%= user.lastName %>"><br>
            <label for="email" class="form__label">Correo electronico: </label><br>
            <input type="email" name="email" placeholder="Ingrese su correo electronico" class ="form__input" value="<%= user.email %>"><br>
            <label for="password" class="form__label">Contraseña: </label><br>
            <input type="password" name="password" placeholder="Ingrese su contraseña" class ="form__input"><br>
            </div>
            <input type="submit" value="Guardar cambios" class="main__btn card__btn-green">
          </form>
        </article>
      </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>